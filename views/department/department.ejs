<%- include('../partials/header'); -%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->

    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6" style="display: flex">
            <h1>DEPARTMENT</h1>
            <a class="btn btn-default btn-xs" title="Create new DEPARTMENT" id="btnNew">
              <i class="fa fa-plus" aria-hidden="true"></i>
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">All Department</h3>
              </div>

              <div class="card-body">
                <table class="table table-hover text-nowrap" id="department-table">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>DEPARTMENT</th>
                      <th>CODE</th>
                      <th>HOD</th>
                    </tr>
                  </thead>
                  <tbody>

                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="modalDepartment" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">NEW DEPARTMENT</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label for="inputDName">Department Name</label>
                <input type="text" class="form-control" id="inputDName" placeholder="Enter name" />
              </div>
              <div class="form-group">
                <label for="inputDCode">Department Code</label>
                <input type="text" class="form-control" id="inputDCode" placeholder="Enter code" />
              </div>
            </div>
            <div class="modal-footer justify-content-between">
              <button type="button" class="btn btn-default" data-dismiss="modal">
                Close
              </button>
              <button type="button" class="btn btn-primary" id="btnAddNewDepartment">ADD NEW</button>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="modalHod" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">CHOOSE FACULTY</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
            </div>
            <div class="modal-body">

              <div class="form-group">
                <label>Select faculty</label>
                <select class="form-control" id="selectFaculty">

                </select>
              </div>
            </div>
            <div class="modal-footer justify-content-between">
              <button type="button" class="btn btn-default" data-dismiss="modal">
                Close
              </button>
              <button type="button" class="btn btn-primary" id="btnNewHodAssign">ASSIGN HOD</button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- /.content-wrapper -->

  <%- include('../partials/footer'); -%>
    <script src="/script/department.js"></script>